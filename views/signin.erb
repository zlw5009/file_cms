  <form action="/users/signin" method="post">
    <div>
      <label for="username"> Username:
        <input name="username" value="<%= params[:username] %>"/>
      </label>
    </div>
    <div>
      <label for="password"> Password:
        <input type="password" name="password" />
      </label>
    </div>
    <button type="submit">Sign In</button>
  </form>